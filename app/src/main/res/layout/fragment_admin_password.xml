<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.FragmentAdminPassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header_isip_11"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/blue_white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/isip_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="ИСиП-11/Admin Password"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:text="Войти"
            app:layout_constraintEnd_toEndOf="@+id/editTextPasswordAdmin"
            app:layout_constraintStart_toStartOf="@+id/editTextPasswordAdmin"
            app:layout_constraintTop_toBottomOf="@+id/editTextPasswordAdmin" />

        <EditText
            android:id="@+id/editTextPasswordAdmin"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:ems="10"
            android:hint="Имя"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="@+id/header_isip_11"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/header_isip_11"
            app:layout_constraintTop_toBottomOf="@+id/header_isip_11" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>