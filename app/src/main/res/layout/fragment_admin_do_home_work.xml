<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAdminDoHomeWork">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header_isip_11"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/blue_white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/isip_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="ИСиП-11/Admin Do HomeWork"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edTheme"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="Тема"
            android:inputType="textPersonName"
            android:shadowColor="#000000"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/header_isip_11"
            app:layout_constraintStart_toStartOf="@+id/header_isip_11"
            app:layout_constraintTop_toBottomOf="@+id/header_isip_11" />

        <EditText
            android:id="@+id/edExercise"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Задание"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edTheme"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/edTheme"
            app:layout_constraintTop_toBottomOf="@+id/edTheme" />

        <EditText
            android:id="@+id/edDate"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Дата"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edTheme"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edTheme"
            app:layout_constraintTop_toBottomOf="@+id/edExercise" />

        <Button
            android:id="@+id/bCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Создать ДЗ"
            app:layout_constraintEnd_toEndOf="@+id/edExercise"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/edExercise"
            app:layout_constraintTop_toBottomOf="@+id/edDate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>